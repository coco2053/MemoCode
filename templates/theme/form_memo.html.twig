<div class="del-memo-{{ form.vars.name }}">
    <div class="switch-field">
        {{ form_row(form.articleOrder, { 'attr': {'class': 'no-height'} }) }}
        {{ form_row(form.language, {'label': 'Langage'}) }}

    </div>
    {{ form_row(form.content, {'label': 'Code', 'attr': {'onkeydown': "if(event.keyCode===9){var v=this.value,s=this.selectionStart,e=this.selectionEnd;this.value=v.substring(0, s)+'\t'+v.substring(e);this.selectionStart=this.selectionEnd=s+1;return false;}",
                                                         'required' : 'false',
                                                         'placeholder' : 'Entrez votre code','rows': '10','spellcheck': 'false' }}) }}

    <button type="button" class="btn btn-remove fa fa-trash fa-lg" data-rel="del-memo-{{ form.vars.name }}"></button>
</div>
