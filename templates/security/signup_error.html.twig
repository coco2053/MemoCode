{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container-in" style="margin: 10px">
  {{ form_start(form, {'action': path('security_signup'), 'attr': {'id': 'register'}}) }}  {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Entrez le pseudo'}}) }}
  {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Entrez votre adresse email'}}) }}
  {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Tapez votre mot de passe'}}) }}
  {{ form_row(form.confirm_password, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Retapez votre mot de passe'}}) }}
  <div class="buttons">
    <button type="submit" name="register" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
  </div>
  <p class="center">Deja inscrit ? </br>
      <a data-jump="true" data-target="{{ path('security_login') }}" class="tooltipped modal-trigger" data-tooltip="Connexion" role="button" href="#addModal">Se connecter</a>
  </p>
</div>
{% endblock %}
